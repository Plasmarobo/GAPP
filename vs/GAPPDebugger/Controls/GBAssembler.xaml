<Window x:Class="GAPPDebugger.Controls.GBAssembler"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GBAssembler" SizeToContent="WidthAndHeight">
    <Grid Height="800" Width="900">
        <TextBox x:Name="Assembly" AcceptsReturn="True" Width="400" Margin="10,10,0,10" HorizontalAlignment="Left"/>
        <StackPanel Orientation="Vertical" Width="80" Height="80" VerticalAlignment="Bottom">
            <Button Content="Load" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="62" Height="20" Click="LoadASM"/>
            <Button Content="Save" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="62" Height="20" Click="SaveASM"/>
            <Button Content="Run" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="62" Height="20" Click="CompileAndRun"/>
        </StackPanel>
        <TextBox x:Name="Execution" IsReadOnly="True" Width="400" Margin="0,10,10,10" HorizontalAlignment="Right"/>
        
    </Grid>
</Window>
