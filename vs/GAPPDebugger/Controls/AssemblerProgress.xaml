<Window x:Class="GAPPDebugger.Controls.AssemblerProgress"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Assembler Output" Height="400" Width="600">
    <Grid Background="Black">
        <StackPanel>
            <ScrollViewer Height="348">
                <TextBlock x:Name="ConsoleWin" Foreground="ForestGreen" FontFamily="Courier New" FontSize="14">
                </TextBlock>
            </ScrollViewer>
            <ProgressBar x:Name="Progress" Height="20" VerticalAlignment="Bottom"/>
        </StackPanel>
    </Grid>
</Window>
